%table.listings
  %thead
    %tr
      %th{:width=>'110px'} &nbsp;
      %th &nbsp;
      %th{:width=>'70px'} Distance
      %th{:width=>'70px'} Walk Time
  %tbody
    - if @all_schools.present?
      - @all_schools.each do |school|
        %tr
          %td
            = link_to image_tag('school.png')
          %td
            %h3= link_to school.name, school_path(school), :rel => 'facebox'
            %span.italic
              == #{school.address}, #{school.city.try(:name)}, #{school.state.try(:abbreviation)}
              %br/
              = school.phone
          %td.large{:width=>'70px'}
            =raw school.distance.present? ? "#{distance_in_miles_from_meters(school.distance)} mi." : '&nbsp;'
          %td.large{:width=>'70px'}
            =raw school.distance.present? ? "#{walk_time(school.distance)} min." : '&nbsp;'