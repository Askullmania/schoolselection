#page
  %h2= @school.name
  #video
    <object classid="clsid:d27cdb6e-ae6d-11cf-96b8-444553540000" width="530" height="322" codebase="http://download.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=6,0,40,0">
    <param name="allowFullScreen" value="true" />
    <param name="allowscriptaccess" value="always" />
    <param name="src" value="http://www.youtube.com/v/fjg1qfETZW4?fs=1&amp;hl=en_US" />
    <param name="allowfullscreen" value="true" /><embed type="application/x-shockwave-flash" width="530" height="322" src="http://www.youtube.com/v/fjg1qfETZW4?fs=1&amp;hl=en_US" allowscriptaccess="always" allowfullscreen="true"></embed>
    </object>
  
  %p
    %br/
    = @school.description
  
  %p
    == #{@school.address} #{@school.city.try(:name)}
    %br/
    ==#{@school.state.try(:abbreviation)} #{@school.zipcode}
    %br/
    %br/
    %b Phone:&nbsp;
    = @school.phone
    %br/
    %b Fax:&nbsp;
    = @school.fax
    %br/
    %b Website:&nbsp;
    = link_to @school.website
  %p
    - unless @school.assignment_zone.blank?
      = @school.assignment_zone.name
      %br/
    - unless @school.school_type_name.blank?
      = @school.school_type_name
      %br/
    - unless @school.grades.blank?
      = @school.grades
      %br/
    - unless @school.hours.blank?
      = @school.hours
      %br/
    - unless @school.early_dismissal_time.blank?
      = @school.early_dismissal_time
      %br/
    - unless @school.breakfast.blank?
      = @school.breakfast
      %br/
    - unless @school.lunch.blank?
      = @school.lunch
