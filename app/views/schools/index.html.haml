- if @walk_zone.present?
  = walk_zone_map
- else
  = default_map

#search-form
  = form_tag('/schools', :method => :get) do
    Home address:&nbsp;
    = text_field_tag :address, "#{converted_address_params}", :width => 100
    &nbsp;Upcoming grade level:&nbsp;
    = select_tag :grade_level, options_for_select(['Elementary School', "Middle School", "High School"], :selected => params[:grade_level])
    = submit_tag "Search"

#page
  =raw alert_message
  
  - if @walk_zone_schools.blank? && @assignment_zone_schools.blank? && @citywide_schools.blank?
    = render :partial => "welcome"
  - else
    - if @walk_zone_schools.present?
      = render :partial => "walk_zone_listings"
    - if @assignment_zone_schools.present?
      = render :partial => "assignment_zone_listings"
    - if @citywide_schools.present?
      = render :partial => "citywide_listings"