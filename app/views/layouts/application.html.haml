%html
  %head
    %title Discover BPS
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'facebox.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    = javascript_include_tag 'application'
    = csrf_meta_tag 
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
  %body
    #container
      #header
        %ul.horizontal-list
          %li= link_to "Search", root_url, :class => 'nav main'
          %li &nbsp;&nbsp;>&nbsp;&nbsp;
          %li= link_to "Eligible Schools", schools_path, :class => 'nav main'

      = yield

    #footer
      = yield :scripts
