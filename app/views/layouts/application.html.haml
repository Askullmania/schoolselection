%html
  %head
    %title Boston Public Schools &mdash; School Discovery App
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'facebox.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    = javascript_include_tag 'application'
    = csrf_meta_tag 
    %script{:type=>"text/javascript"}
      jQuery(document).ready(function($) {
      $('a[rel*=facebox]').facebox({
      loadingImage : 'images/loading.gif',
      closeImage   : 'images/closelabel.png'
      })
      })
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
  %body
    #navigation
      %ul.main-nav
        - if params[:controller] == 'high_voltage/pages'
          %li.border.on 1.&nbsp; Search
        - else
          %li.border== 1.&nbsp; #{link_to 'Search', root_url({:address => params[:address], :zipcode => params[:zipcode], :grade_level => params[:grade_level]})}
        - if params[:controller] == 'schools'
          %li.border.on 2.&nbsp; Discover
        - else
          %li.border 2.&nbsp; Discover
        %li.border 3.&nbsp; Compare
        %li 4.&nbsp; Connect
    
    #container
      = yield
      - if params[:controller] == 'schools'
        = link_to 'box', school_path(School.first), :rel => 'facebox'
    #footer
      = yield :scripts
      <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-25443060-1']);
      _gaq.push(['_setDomainName', 'none']);
      _gaq.push(['_setAllowLinker', true]);
      _gaq.push(['_trackPageview']);
      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
      </script>